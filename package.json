{
  "name": "@monorepo/root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "common/**",
      "**/common/**",
      "app/**",
      "**/app/**",
      "server/**",
      "**/server/**"
    ]
  },
  "scripts": {
    "dev": "run-p \"dev:*\"",
    "dev:server": "yarn workspace @oju/server start:dev",
    "dev:app": "yarn workspace @oju/app start"
  },
  "dependencies": {
    "yarn-run-all": "^3.1.1"
  }
}
